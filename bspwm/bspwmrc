#!/bin/sh
killall -q polybar
killall -q sxhkd

##  --- VARIABLES ---------------------------------
INTERNAL_MONITOR="eDP"
#EXTERNAL_MONITOR="HDMI-A-0"
EXTERNAL_MONITOR="DisplayPort-0"

##  --- Monitor configuration ----------------------
xrandr --output "$INTERNAL_MONITOR" --rate 60
xrandr --output "$EXTERNAL_MONITOR" --rate 60 --left-of "$INTERNAL_MONITOR"

##  --- Basic setup configuration -------------------

##  --- Keyboard
setxkbmap eu
setxkbmap -option caps:escape

##  --- Mouse
xsetroot -cursor_name left_ptr

##  --- BSPWM workspaces by monitor ------------------
bspc monitor "$EXTERNAL_MONITOR" -d I II III IV V
bspc monitor "$INTERNAL_MONITOR" -d VI VII VIII IX X
bspc wm --reorder-monitors $EXTERNAL_MONITOR $INTERNAL_MONITOR

bspc monitor -d 1 2 3 4 5 6 7 8 9 0

##  --- BSPWM configuration ---------------------------
bspc config border_width         0
bspc config window_gap           0
bspc config top_padding          35
bspc config bottom_padding       6
bspc config split_ratio          0.49
bspc config borderless_monocle   true
bspc config gapless_monocle      true

##  --- Polybar init -----------------------------------
polybar -c /home/lsantos/configFiles/polybar/config thinkpad-left &
polybar -c /home/lsantos/configFiles/polybar/config thinkpad-center &
polybar -c /home/lsantos/configFiles/polybar/config thinkpad-wifi &
polybar -c /home/lsantos/configFiles/polybar/config thinkpad-ethernet &
polybar -c /home/lsantos/configFiles/polybar/config thinkpad-right &
polybar -c /home/lsantos/configFiles/polybar/config AOC-banner &
polybar -c /home/lsantos/configFiles/polybar/config AOC-center &
polybar -c /home/lsantos/configFiles/polybar/config AOC-music &
polybar -c /home/lsantos/configFiles/polybar/config AOC-right &


##  --- Software and Services --------------------------
sxhkd -c /home/lsantos/configFiles/sxhkd/sxhkdrc &
picom --config /home/lsantos/configFiles/picom/picom.conf &
feh --bg-scale /home/lsantos/Pictures/Wallpapers/hyundai.png
clipmenud &
